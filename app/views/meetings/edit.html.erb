<h2> Edit Event </h2>

<%= form_with model: @meeting do |form| %>

  <%= form.hidden_field :user_id %>

  <div class="mb-3">
    <%= form.label :event, "Event" %>
    <%= form.text_field :event %>
  </div>

  <div class="mb-3">
    <%= form.label :start_time %>
    <%= form.datetime_field :start_time, class: "form-control", placeholder: "apple@gmail.com" %>
  </div>

  <div class="mb-3">
    <%= form.label :end_time %>
    <%= form.datetime_field :end_time, class: "form-control", placeholder: "apple@gmail.com" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Edit Event"%>
  </div>

  <div class="mb-3">
    <%= link_to "Delete Event", meeting_path, method: :delete %>
  </div>

<% end %>